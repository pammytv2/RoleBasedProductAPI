@{
    ViewData["Title"] = "Home Page";
    Layout = null; // Set layout to null to avoid using the default layout for this page
}
<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>แดชบอร์ดคลังสินค้า</title>
    <link rel="stylesheet" href="~/assets/css/menu.css" />
    <link href="https://unpkg.com/boxicons@2.1.2/css/boxicons.min.css" rel="stylesheet">

</head>
<body>
    <!-- Navigation -->
    <div class="nav" id="nav">
        <nav class="nav__content">
            <a href="#" class="nav__logo">
                <span class="nav__logo-name">Menu</span>
            </a>
            <div class="nav__list">
                <a href="@Url.Action("Dashboard","Home")" class="nav__link active-link">
                    <i class="bx bx-grid-alt"></i>
                    <span class="nav__name">แดชบอร์ด</span>
                </a>
                <a href="@Url.Action("Products1","Home")" class="nav__link">
                    <i class="bx bx-package"></i>
                    <span class="nav__name">สินค้า</span>
                </a>
                <a href="@Url.Action("StockIn","Home")" class="nav__link">
                    <i class="bx bx-download"></i>
                    <span class="nav__name">รับเข้า</span>
                </a>
                <a href="@Url.Action("StockOut","Home")" class="nav__link">
                    <i class="bx bx-upload"></i>
                    <span class="nav__name">เบิกออก</span>
                </a>
                <a href="@Url.Action("Reports","Home")" class="nav__link">
                    <i class="bx bx-bar-chart"></i>
                    <span class="nav__name">รายงาน</span>
                </a>
                <a href="@Url.Action("Settings","Home")" class="nav__link">
                    <i class="bx bx-cog"></i>
                    <span class="nav__name">ตั้งค่า</span>
                </a>
            </div>
        </nav>
    </div>

    <!-- Main Content -->
    <main class="main-content">
        <h1>แดชบอร์ดคลังสินค้า</h1>

        <!-- Dashboard Cards -->
        <div class="dashboard-container">
            <!-- Total Products Card -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h3>สินค้าทั้งหมด</h3>
                    <i class="bx bx-package card-icon"></i>
                </div>
                <div class="card-content">
                    <div class="card-value">150</div>
                    <div class="card-trend trend-up">
                        <i class="bx bx-up-arrow-alt"></i> 5%
                    </div>
                </div>
            </div>

            <!-- Stock In Card -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h3>รับเข้า (เดือนนี้)</h3>
                    <i class="bx bx-download card-icon"></i>
                </div>
                <div class="card-content">
                    <div class="card-value">1,250</div>
                    <div class="card-trend trend-up">
                        <i class="bx bx-up-arrow-alt"></i> 12%
                    </div>
                </div>
            </div>

            <!-- Stock Out Card -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h3>เบิกออก (เดือนนี้)</h3>
                    <i class="bx bx-upload card-icon"></i>
                </div>
                <div class="card-content">
                    <div class="card-value">850</div>
                    <div class="card-trend trend-down">
                        <i class="bx bx-down-arrow-alt"></i> 3%
                    </div>
                </div>
            </div>

            <!-- Low Stock Card -->
            <div class="dashboard-card">
                <div class="card-header">
                    <h3>สินค้าใกล้หมด</h3>
                    <i class="bx bx-error-circle card-icon"></i>
                </div>
                <div class="card-content">
                    <div class="card-value">15</div>
                    <div class="card-trend trend-down">
                        <i class="bx bx-up-arrow-alt"></i> คำสั่งซื้อ
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Activity -->
        <div class="recent-activity">
            <h2>กิจกรรมล่าสุด</h2>
            <ul class="activity-list">
                <li class="activity-item">
                    <div class="activity-details">
                        <strong>รับเข้าสินค้า</strong>
                        <p>เสื้อยืดคอกลม 500 ชิ้น</p>
                    </div>
                    <span class="activity-time">2 ชั่วโมงที่แล้ว</span>
                </li>
                <li class="activity-item">
                    <div class="activity-details">
                        <strong>เบิกออกสินค้า</strong>
                        <p>กางเกงยีนส์ 50 ชิ้น (แผนกขาย)</p>
                    </div>
                    <span class="activity-time">5 ชั่วโมงที่แล้ว</span>
                </li>
                <li class="activity-item">
                    <div class="activity-details">
                        <strong>เตือนสินค้าคงคลัง</strong>
                        <p>รองเท้าผ้าใบ คงเหลือน้อยกว่า 20 คู่</p>
                    </div>
                    <span class="activity-time">เมื่อวาน</span>
                </li>
            </ul>
        </div>
    </main>
</body>
</html>